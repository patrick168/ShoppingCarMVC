@{
//ViewBag.Title = "會員登入";
}

<h2>@ViewBag.Title</h2>

<form action="@Url.Action("Login")" method="post">
    <div class="form-horizontal">
        <hr />
        <div class="form-group">
            <span class="control-label col-md-2">帳號</span>
            <div class="col-md-10">
                <input type="text" id="fUserId" name="fUserId" required="required" class="form-control length-strict" value="koala"/>
            </div>
        </div>

        <div class="form-group">
            <span class="control-label col-md-2">密碼</span>
            <div class="col-md-10">
                <input type="password" id="fPwd" name="fPwd" required="required" class="form-control length-strict"" value="1234" />
            </div>
        </div>

        <div class="form-group">
            <div class="col-md-offset-2 col-md-10">
                <input type="submit" value="登入" class="btn btn-default" />
                @ViewBag.Message
            </div>
        </div>
    </div>
</form>
